@using Core
@model FileGroupViewModel
@{
    ViewData["Title"] = "Manage Filegroup";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@ViewData["Title"]</h4>

        <form asp-action="AddFileGroup" method="post">
            <div class="mb-3">
                <label asp-for="DatabaseName"></label>
                <input asp-for="DatabaseName" class="form-control" />
                <span asp-validation-for="DatabaseName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FileGroupName"></label>
                <input asp-for="FileGroupName" class="form-control" />
                <span asp-validation-for="FileGroupName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FileName"></label>
                <input asp-for="FileName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="FilePath"></label>
                <input asp-for="FilePath" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="SizeMB"></label>
                <input asp-for="SizeMB" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="MaxSizeMB"></label>
                <input asp-for="MaxSizeMB" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="FileGrowthPercent"></label>
                <input asp-for="FileGrowthPercent" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">Generate Add Filegroup Script</button>
        </form>

        @if (!string.IsNullOrWhiteSpace(Model.GeneratedScript))
        {
            <hr />
            <h5>Generated SQL</h5>
            <div class="mb-2">
                <button id="copyButton" class="btn btn-sm btn-outline-secondary" onclick="copyScript()">Copy</button>
                <a class="btn btn-sm btn-outline-success" href="data:text/plain;charset=utf-8,@Uri.EscapeDataString(Model.GeneratedScript)" download="ManageFileGroup.sql">Download</a>
            </div>
            <pre id="scriptArea" style="white-space:pre-wrap; background:#1e1e1e; color:#e6e6e6; padding:15px; border-radius:6px;">@Model.GeneratedScript</pre>
        }

       
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
