@using Core
@model TempDbSettings
<div class="card">
    <div class="card-body">
        <h2>Create TempDB</h2>

        <form method="post">
            <div class="form-group">
                <label for="CpuCores">CPU Cores</label>
                <input type="number" class="form-control" id="CpuCores" name="CpuCores" value="@Model.CpuCores" required />
            </div>

            <div class="form-group">
                <label for="RamSizeGb">RAM Size (GB)</label>
                <input type="number" class="form-control" id="RamSizeGb" name="RamSizeGb" value="@Model.RamSizeGb" required />
            </div>

            <div class="form-group">
                <label for="PathFile">PathFile</label>
                <input type="text" class="form-control" id="PathFile" name="PathFile" value="@Model.PathFile" required />
            </div>
            <button type="submit" class="btn btn-primary">Generate Script</button>
        </form>

        @if (!string.IsNullOrWhiteSpace(Model.GeneratedScript))
        {
            <hr />
            <h5>Generated SQL</h5>
            <div class="mb-2">
                <button id="copyButton" class="btn btn-sm btn-outline-secondary" onclick="copyScript()">Copy</button>
                <a class="btn btn-sm btn-outline-success" href="data:text/plain;charset=utf-8,@Uri.EscapeDataString(Model.GeneratedScript)" download="CreateTempDb.sql">Download</a>
            </div>
            <pre id="scriptArea" style="white-space:pre-wrap; background:#1e1e1e; color:#e6e6e6; padding:15px; border-radius:6px;">@Model.GeneratedScript</pre>
        }
    </div>
</div>
