@using Core
@model ServerRoleAssignViewModel

<div class="card">
    <div class="card-body">

        <h4>Assign Login to Server Role</h4>

        <form method="post">

            <label>Login Name</label>
            <input asp-for="LoginName" class="form-control" />

            <label>Role Name</label>
            <select asp-for="RoleName" class="form-control">
                <option value="sysadmin">sysadmin</option>
                <option value="serveradmin">serveradmin</option>
                <option value="securityadmin">securityadmin</option>
                <option value="dbcreator">dbcreator</option>
                <option value="diskadmin">diskadmin</option>
                <option value="processadmin">processadmin</option>
                <option value="setupadmin">setupadmin</option>
                <option value="bulkadmin">bulkadmin</option>
                <option value="public">public</option>
            </select>

            <button class="btn btn-primary mt-3">Assign Role</button>

        </form>



        @if (!string.IsNullOrWhiteSpace(Model.GeneratedScript))
        {
            <hr />
            <h5>Generated SQL</h5>
            <div class="mb-2">
                <button id="copyButton" class="btn btn-sm btn-outline-secondary" onclick="copyScript()">Copy</button>
                <a class="btn btn-sm btn-outline-success" href="data:text/plain;charset=utf-8,@Uri.EscapeDataString(Model.GeneratedScript)" download="AddLoginToServerRole.sql">Download</a>
            </div>
            <pre id="scriptArea" style="white-space:pre-wrap; background:#1e1e1e; color:#e6e6e6; padding:15px; border-radius:6px;">@Model.GeneratedScript</pre>
        }

    </div>
</div>
